#sidebar
  width 220px
  background #333a4b
  position absolute
  top 0
  left 0
  bottom 0
  color #c0ddf8
  .title-wrapper
    width 100%
    height 50px
    line-height 50px
    color #ffffff
    font-size 24px
    background #43495a
    padding 0 20px
    box-sizing border-box
    .p-logo
      margin-right 5px
      font-size 24px
    .p-double-left
      float: right
      cursor pointer
    .p-double-right
      display none
  .menu-wrapper
    margin 10px 0
    display inline-block
    width 100%
    .menu-item
      position relative
      padding 0 20px
      height 40px
      line-height 40px
      cursor pointer
      font-size 16px
      border-left 2px solid #333a4b
      .p-right
        float right
        font-size 14px
        color #ffffff
      .list-wrapper
        position absolute
        display none
        top 0
        left 100%
        width 170px
        font-size 14px
        background #3f4a5f
        z-index 100
        .list-item
          padding-left 40px
          border-left 2px solid #3f4a5f
          &:hover
            background #3f4a60
            border-left 2px solid #00aaef
            color #ffffff
      &:hover
        background #3f4a60
        border-left 2px solid #00aaef
        .plus-icon:first-child
          color #00aaef
        .menu-desc
          color #ffffff
        .list-wrapper
          display inline-block
      &.active
        background #2d3143
        border-left 2px solid #00aaef
        .plus-icon:first-child,.menu-desc
          color #00aaef
  .cut-line-wrapper
    padding 0 20px
    margin-top 20px
    .cut-line
      border 1px solid #3e485d
  .often-wrapper
    .title
      margin 30px 0 10px 20px
      font-size 16px
    .glyphicon-star-empty
      display none
    .often-item
      padding-left 40px
      font-size 12px
      height 32px
      line-height 32px
      .glyphicon
        margin-right 5px
      &:hover
        background rgba(255,255,255,.2)
        .glyphicon
          color #00aaef
        .often-desc
          color #ffffff
  .bottom
    position absolute
    left 0
    bottom 0
    width 100%
    padding 0 20px
    .info-wrapper
      position relative
      padding 20px 0
      border-top 2px solid #3e485d
      .info-img-wrapper
        position absolute
        width 40px
        height 40px
        display inline-block
        border-radius 50%
        overflow hidden
        background #ffffff
        img
          width 100%
      .info-desc
        margin-left 50px
        p
          margin 0
    .setting-wrapper
      padding-bottom 20px
      .plus-icon
        font-size 20px
        &:hover
          color #00aaef
      .p-setting
        margin-right 40px
        color #c0ddf8
      .setting-list
        position absolute
        display none
        bottom 48px
        left 20px
        font-size 14px
        background rgba(63,74,96,1)
        cursor pointer
        &.active
          display inline-block
        .setting-item
          padding 4px 0px 4px 40px
          width 150px
          &:hover
            color #FFFFFF
  &.short
    width 60px
    text-align center
    .title-wrapper
      .p-logo,.title,.p-double-left
        display none
      .p-double-right
        display inline-block
        vertical-align top
    .menu-wrapper
      .menu-item
        padding 0 15px
        .menu-desc,.p-right
          display none
        .list-item
          font-size 14px
    .cut-line-wrapper
      padding 0 15px
      margin-top 0
    .scroll-wrapper
      overflow visible
    .often-wrapper
      margin-top 5px
      text-align center
      position relative
      height 40px
      line-height 40px
      cursor pointer
      font-size 16px
      border-left 2px solid #333a4b
      .title
        display none
      .often-list-wrapper
        display none
      .glyphicon-star-empty
        display inline-block
        font-size 18px
      &:hover
        border-left 2px solid #00aaef
        background #3f4a60
        .glyphicon-star-empty
          color #00aaef
        .often-list-wrapper
          position absolute
          left 100%
          top 0
          background #3f4a5f
          display inline-block
          width 150px
          z-index 100
          .often-item
            padding-left 20px
            text-align left
    .bottom
      padding 0 15px
      .info-wrapper
        margin-bottom 40px
        .info-img-wrapper
          left -5px
          top 20px
        .info-desc
          display none
      .setting-wrapper
        .plus-icon
          font-size 24px
          margin 0
        .setting-list
          width 180px
          bottom 82px
          z-index 100
#nav
  position absolute
  left 220px
  top 0
  right 0
  height 50px
  background #F9F9FB
  border-bottom 1px solid #D6D7DC
  box-sizing content-box
  .content-left
    height 100%
    width calc(100% - 332px)
    margin-right 10px
    font-size 0
    display inline-block
    .arrow-wrapper
      display inline-block
      vertical-align top
      width 46px
      text-align center
      height 50px
      line-height 50px
      border-right 1px solid #EFEFF4
      box-sizing border-box
      .p-arrow-left,.p-arrow-right
        color #CCCCCC
        font-size 18px
        cursor pointer
        &.active
          color #333a4b
    .tabs-wrapper
      display inline-block
      overflow hidden
      width calc(100% - 192px)
      height 50px
      margin 0
      .tabs
        display inline-block
        vertical-align middle
        height 50px
        line-height 50px
        padding 0 10px
        border-right 1px solid #EFEFF4
        font-size 12px
        .text
          vertical-align top
          cursor pointer
        .p-close
          font-size 12px
          cursor pointer
        &.active
          background #333A4C
          color #F9F9FB
          .plus-icon
            color: #f9f9fb
    .close-wrapper
      width 100px
      height 100%
      &.open
        btn
          color #333333
      .btn
        height 100%
        border none
        color #333333
        background transparent
        &:hover
          background #333a4c
          color #ffffff
      .dropdown-menu
        width 150px
        text-align center
  .content-right
    float right
    font-size 0
    height 50px
    .search-wrapper
      position relative
      display inline-block
      height 50px
      line-height 50px
      margin-right 10px
      .search-box
        vertical-align middle
        font-size 14px
        height 30px
        line-height 30px
        width 220px
        border-radius 15px
        padding 0 20px
        border 1px solid #CCCCCC
      .p-search
        position absolute
        font-size 16px
        right 20px
    .tips-wrapper
      display inline-block
      position relative
      vertical-align top
      width 46px
      text-align center
      height 50px
      line-height 50px
      border-right 1px solid #EFEFF4
      box-sizing border-box
      &.tips-num:after
        content attr(data-attr)
        display inline-block
        position absolute
        top 8px
        right 8px
        font-size 12px
        font-weight 700
        width 16px
        height 16px
        line-height 16px
        border-radius 10px
        background red
        color #ffffff
        text-align center
        transform scale(.7)
      &:hover
        background #eeeeee
        color #575f67
    .work-wrapper
      position relative
      display inline-block
      vertical-align top
      width 46px
      text-align center
      height 50px
      line-height 50px
      border-right 1px solid #EFEFF4
      .work-list
        position absolute
        display none
        margin 0
        right 0
        top 51px
        font-size 14px
        border 1px solid #D6D7DC
        border-top none
        border-bottom none
        background #f9f9fb
        width 200px
        z-index 100
        .work-item
          height 40px
          line-height 40px
          padding 0 20px
          text-align left
          border-bottom 1px solid #d6d7dc
          &:hover
            background #00aaef
            color #ffffff
      &:hover
        background #eeeeee
        color #575f67
        .work-list
          display inline-block
  &.short
    left 60px
.scroll-wrapper
  position absolute
  bottom 130px
  top 480px
  overflow-y auto
  width 100%