.tooltips-wrapper
  position absolute
  font-size 12px
  padding-bottom 14px
  left 10px
  top 10px
  transform translateY(-100%)
  z-index 1000
  &.hide
    visibility hidden
  #tooltips
    width 330px
    background #FFFFFF
    padding 10px
    border 1px solid #CCCCCC
    box-shadow 3px -2px 4px rgba(204,204,204,.5)
    .title
      margin-bottom 0px
      padding-bottom 10px
      border-bottom 1px solid #eeeeee
      .title-name
        font-size 14px
        color #00aaef
      .tooltips-options-wrapper
        margin-top 2px
        .tooltips-edit
          cursor pointer
          margin-right 5px
        .tooltips-delete
          cursor pointer
    .tooltips-info
      margin-bottom 0px
      padding-top 10px
      .desc-item
        padding 2px 0
        .desc
          display inline-block
          color #a3a3a3
          width 50px
        .description,.time,.remind
          color #5a5a5a
          display inline-block
          width calc(100% - 55px)
          vertical-align top
        .person
          display inline-block
          vertical-align top
          .person-list
            text-align center
            .person-name
              color #a3a3a3
              transform scale(0.8)
              margin-bottom 0px
  .sanjiao-down
    position absolute
    bottom 0px
    left 5px
    width 0
    border-top 8px solid #CCCCCC
    border-right 6px solid transparent
    border-left 6px solid transparent
    border-bottom 6px solid transparent
    &:after
      content ''
      position absolute
      width 0
      bottom -3px
      left -5px
      border-top 7px solid #FFFFFF
      border-right 5px solid transparent
      border-left 5px solid transparent
      border-bottom 5px solid transparent

