//工作台任务模块

.main-item
  width 100%
  height calc(100% - 58px)
  padding 10px
  .to-do-item,.new-item,.finish-item
    background #efeff4
    padding 10px 10px 20px 10px
    max-height 100%
    overflow-y auto
    .item-title
      font-size 16px
      .history
        font-size 14px
        color #00aaef
        cursor pointer
    .box
      background #FFFFFF
      padding 10px
      margin 10px 0
      .box-info
        margin-bottom 0
        li
          padding 3px 0
  .to-do-item
    width calc(50% - 10px)
    margin-right 10px
    .box
      .sort-icon
        color #26bf8c
        font-size 24px
        margin-right 10px
        &.p-shangji1
          color #26bf8c
        &.p-hetong1
          color #ff3366
      .box-info
        width calc(100% - 34px)
        .opportunities-number,.opportunities-name
          color #00aaef
          cursor pointer
        .btn-info
          margin-top 10px
  .finish-item
    width 50%
    height 100%
    .choose-month
      margin-left 5%
    .box-wrapper
      max-height calc(100% - 78px)
      overflow-y auto
      margin 10px 0
      .box
        margin 0 0 10px 0
      .loading-wrapper
        text-align center
        .p-loading
          display inline-block
          font-size 24px
          animation rotation 2s linear infinite
@keyframes rotation
  to
    transform: rotate(360deg)

//工作台文件模块
  .file-address
    height 40px
    span
      display inline-block
      height 100%
      line-height 40px
      &.address-info
        color #00aaef
        cursor pointer
  .file-wrapper
    padding 0 30px 0 10px
    height calc(100% - 40px)
    overflow auto
    &.modal-inner
      overflow hidden
    .file-item
      height 60px
      line-height 60px
      border-bottom 1px solid #CCCCCC
      .file-name
        margin-left 10px
        cursor pointer
        &:hover
          color #00aaef
          text-decoration underline
      .features-wrapper
        margin-bottom 0
        height 100%
        .p-fenxiang,.glyphicon-pencil
          margin-right 10px
          font-size 14px
          cursor pointer
        .p-xiazai,.glyphicon-trash
          cursor pointer
          font-size 14px
//日程表样式
.calendar-wrap
  position relative
  overflow hidden
  height 100%
  #calendar,.schedule-alendar-panel
    position absolute
    top: 0;
    bottom: 0;
    left: 0;
    right: -17px
    height 100%
    overflow-y scroll
    padding-right: 17px; /* Increase/decrease this value for cross-browser compatibility */


.work-back
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background-color rgba(0,0,0,.5)
  display none
  &.z-index-css
    z-index 5
//任务详情弹出层
.mission-wrap,.tips-wrap
  display none
  position fixed
  top 50px
  right 0
  width 400px
  height calc(100% - 50px)
  background #FFFFFF
  z-index 5
  .mission-header,.tips-header
    background #333a4b
    height 50px
    padding 0 10px
    color #FFFFFF
    .mission-title,.tips-title
      line-height 50px
      margin-bottom 0
      &.tips-title
        font-size 16px
    .mission-option,.tips-option
      margin-bottom 0
      .mission-item,.tips-item
        margin-left 10px
        float left
        height 50px
        line-height 50px
        position relative
        color #FFFFFF
        cursor pointer
        &:hover
          color #00aaef
        .active
          color #00aaef
        .upload-option
          position absolute
          background #FFFFFF
          top 50px
          left 0
          width 120px
          height auto
          color #5a5a5a
          margin-left 0
          font-size 12px
          line-height 1.2
          &.display
            display none
          p
            margin 0
            padding 5px
            border-bottom 1px solid #AAAAAA
            border-right 1px solid #AAAAAA
            border-left 1px solid #AAAAAA
            &:hover
              background #EEEEEE

  .mission-inner
    width 100%
    height 100%
    padding 0 20px
    overflow auto
    ul
      width 100%
      li
        padding 10px 0
        span:first-child
          display inline-block
          width 30%
        .distribution-wrapper
          margin-top 10px
          .img-wrapper-box
            position relative
            display inline-block
            .p-guanbi
              position absolute
              top -5px
              right 0
              display inline-block
              font-size 12px
              transform scale(0.8)
              cursor pointer
          .img-wrapper
            vertical-align top
            display inline-block
            width 40px
            height 40px
            border-radius 20px
            margin-right 10px
            overflow hidden
            img
              vertical-align top
              width 100%
          .add-person
            line-height 40px
            text-align center
            background #CCCCCC
            color #FFFFFF
            font-size 28px
            font-weight 700
            cursor pointer
            &:hover
              opacity 0.6

        .add-upload
          color #00aaef
          cursor pointer
        .added-upload
          margin-top 10px
          .added-item
            background #f9fafb
            padding 10px 20px
            .icon-wrapper
              display inline-block
              width 80px
              height 80px
              background #FFFFFF
              text-align center
              line-height 80px
              margin-right 20px
              .plus-icon
                font-size 36px
                width 100%
            .added-info
              display inline-block
              vertical-align top
              p
                margin 5px 0
                &:last-child>*
                  margin-right 5px
                  color #333333
                  cursor pointer
  .tips-inner
    padding 0px 40px
    overflow auto
    width 100%
    height calc(100% - 50px)
    .system-push,.mentioned-me,.announcement
      border-bottom 1px solid #CCCCCC
      padding 20px 0
      margin 10px 0
      p
        margin 0 0 0 0
    .system-push
      p.system-push-title
        position relative
        font-size 16px
        cursor pointer
        .sanjiao-mark
          display none
          position absolute
          top 3px
          left -12px
          font-size 12px
          color #00aaef
        .system-push-number
          display inline-block
          vertical-align middle
          width 18px
          height 18px
          line-height 18px
          text-align center
          border-radius 9px
          font-size 12px
          background #aaaaaa
          color #FFFFFF
        &.active
          color #00aaef
          .sanjiao-mark
            display block
          .system-push-number
            display none
      .system-push-inner
        padding 20px 0
        border-bottom 1px solid #CCCCCC
        &:last-child
          padding-bottom 0px
          border-bottom none
        .sort-icon
          font-size 24px
          color #00aaef
          margin-right 10px
        .system-push-content
          display inline-block
          width calc(100% - 34px)
          .system-push-content-header
            .system-name
              font-size 16px
              margin-right 5px
            .system-person
              color #00aaef
              margin-right 5px
              cursor pointer
            .system-date
              font-size 12px
              margin-right 5px
              color #a9a9a9

          .system-push-content-text
            font-size 12px
            color #a9a9a9
    .mentioned-me
      p.mentioned-me-title
        position relative
        font-size 16px
        cursor pointer
        .sanjiao-mark
          display none
          position absolute
          top 3px
          left -12px
          font-size 12px
          color #00aaef
        .mentioned-me-number
          display inline-block
          vertical-align middle
          width 18px
          height 18px
          line-height 18px
          text-align center
          border-radius 9px
          font-size 12px
          background #aaaaaa
          color #FFFFFF
        &.active
          color #00aaef
          .sanjiao-mark
            display block
          .mentioned-me-number
            display none
    .announcement
      p.announcement-title
        position relative
        font-size 16px
        cursor pointer
        .sanjiao-mark
          display none
          position absolute
          top 3px
          left -12px
          font-size 12px
          color #00aaef
        .announcement-number
          display inline-block
          vertical-align middle
          width 18px
          height 18px
          line-height 18px
          text-align center
          border-radius 9px
          font-size 12px
          background #aaaaaa
          color #FFFFFF
        &.active
          color #00aaef
          .sanjiao-mark
            display block
          .announcement-number
            display none
      .announcement-inner
        padding 20px 0
        border-bottom 1px solid #CCCCCC
        &:last-child
          padding-bottom 0px
          border-bottom none
        .dropdown
          display inline-block
          margin-bottom 10px
        .announcement-content-header
          .announcement-name
            font-size 16px
            margin-right 5px
          .announcement-person
            color #00aaef
            margin-right 5px
            cursor pointer
          .announcement-date
            font-size 12px
            margin-right 5px
            color #a9a9a9
        .announcement-text
          font-size 12px
          color #a9a9a9
